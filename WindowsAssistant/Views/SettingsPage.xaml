<UserControl x:Class="PersonaDesk.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="White"/>

        <!-- Assistant Name -->
        <TextBlock Text="Assistant Name:" Foreground="White"/>
        <TextBox Text="{Binding AssistantName, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2E2E3F" Foreground="White" BorderBrush="#555" Margin="0,5,0,15" />

        <!-- Personality Prompt -->
        <TextBlock Text="Personality Prompt:" Foreground="White"/>
        <TextBox Text="{Binding PersonalityPrompt, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2E2E3F" Foreground="White" BorderBrush="#555" 
                 AcceptsReturn="True" Height="80" Margin="0,5,0,15" TextWrapping="Wrap"/>

        <!-- Hotkey -->
        <TextBlock Text="Hotkey to Open App:" Foreground="White"/>
        <TextBox Text="{Binding Hotkey, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2E2E3F" Foreground="White" BorderBrush="#555" Margin="0,5,0,15"
                 PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                 Name="HotkeyTextBox"
                 IsReadOnly="True"
                 ToolTip="Press a key combination (e.g., Ctrl+Shift+P)"/>

        <Button x:Name="saveBtn" Content="Save Settings" Command="{Binding SaveCommand}" Width="120" HorizontalAlignment="Left" Padding="8,4"
                Background="#3A86FF" Foreground="White" BorderThickness="0" />
    </StackPanel>
</UserControl>
